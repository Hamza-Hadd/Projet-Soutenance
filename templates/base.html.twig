<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>{% block title %}NumArtHome{% endblock %}</title>
    {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
    {% block stylesheets %}
    <link rel="stylesheet" type="text/css" href={{asset('css/bootstrap.css')}}>
    <link rel="stylesheet" type="text/css" href={{asset('css/style.css')}}>
    {#{{ encore_entry_link_tags('app') }}#}
    {% endblock %}

    {% block javascripts %}
    <script src="javascripts" href={{asset('js/bootstrap.js')}}></script>
    {% endblock %}
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light mt-4">
        <div class="container mx-5">
            <a class="navbar-brand" href="#">NumArt</a>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse ml-5" id="navbarSupportedContent">
                <ul class="navbar-nav">

                    <li class="nav-item">
                        <a class="nav-link" href="#">Accueil</a>
                    </li>





                    {% if app.user %}

                    <li class="nav-item active">
                        <a class="nav-link" href={{ path("user_profile") }}>Profil<span
                                class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href={{ path("app_logout") }}>logout</a>
                    </li>
                    {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href={{ path("app_register") }}>cr√©e profil</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href={{ path("app_login") }}>login</a>
                    </li>

                    {% endif %}
            </div>

            </ul>

        </div>
    </nav>

    {% block body %}{% endblock %}
</body>

</html>